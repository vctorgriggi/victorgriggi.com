---
import { cn } from '@/lib/utils';
import { cva, type VariantProps } from 'class-variance-authority';

export const cardVariants = cva('rounded-2xl border bg-card transition-all duration-300',
  {
    variants: {
      variant: {
        default: 'border-border-subtle',
        elevated:
          'border-border-subtle hover:border-primary hover:-translate-y-1 hover:shadow-lg',
        featured:
          'border-primary hover:shadow-[0_0_0_1px_var(--primary),0_0_44px_-14px_var(--primary)]',
      },
      padding: {
        sm: 'p-4',
        md: 'p-6',
        lg: 'p-8',
      },
    },
    defaultVariants: {
      variant: 'default',
      padding: 'md',
    },
  },
);

export interface Props
  extends
    Omit<astroHTML.JSX.HTMLAttributes, 'class'>,
    VariantProps<typeof cardVariants> {
  class?: string;
}

const { variant, padding, class: className, ...props } = Astro.props;
---

<div class={cn(cardVariants({ variant, padding }), className)} {...props}>
  <slot />
</div>
