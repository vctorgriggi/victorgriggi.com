---
import Footer from '@/components/layout/Footer.astro';
import Head from '@/components/layout/Head.astro';
import Nav from '@/components/layout/Nav.astro';
import Container from '@/components/ui/Container.astro';
import { SITE } from '@/data/consts';
import '@/styles/global.css';

// Import Montserrat font weights
import '@fontsource/montserrat/400.css';
import '@fontsource/montserrat/500.css';
import '@fontsource/montserrat/600.css';
import '@fontsource/montserrat/700.css';
---

<!doctype html>
<html class="bg-background text-text" lang={SITE.locale}>
  <Head>
    <slot name="head" />
  </Head>

  <body class="flex h-fit min-h-screen flex-col font-sans">
    <Nav />

    <main class="grow">
      <Container>
        <slot />
      </Container>
    </main>

    <Footer />
  </body>
</html>
