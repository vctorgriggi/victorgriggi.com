---
import Footer from '@/components/layout/context/Footer.astro';
import Head from '@/components/layout/Head.astro';
import Nav from '@/components/layout/context/Nav.astro';
import Container from '@/components/layout/structure/Container.astro';
import { SITE } from '@/data/consts';
import '@/styles/global.css';

// Import Montserrat font weights
import '@fontsource/montserrat/400.css';
import '@fontsource/montserrat/500.css';
import '@fontsource/montserrat/600.css';
import '@fontsource/montserrat/700.css';
---

<!doctype html>
<html class="bg-background text-text" lang={SITE.locale}>
  <Head>
    <slot name="head" />
  </Head>

  <body class="min-h-screen font-sans">
    <Nav />
    <main>
      <Container>
        <slot />
      </Container>
    </main>
    <Footer />
  </body>
</html>
